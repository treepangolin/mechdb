<h2 class="mono">Forgot Password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |form| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-floating my-3 col-sm-10 col-lg-4">
    <%= form.text_field :username, autocomplete: 'username', class: 'form-control', placeholder: 'Username' %>
    <%= form.label :username, 'Username' %>
    <div class="form-text">A link to reset your password will be sent to the email associated with this username.</div>
  </div>

  <div class="row g-3 align-items-center">
    <div class="col-auto">
      <%= form.button :submit, class: 'btn btn-primary' do %>
        <i class="bi-envelope-fill"></i> Send instructions
      <% end %>
    </div>

    <div class="col-auto">
      <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>
