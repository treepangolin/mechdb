<h2 class="mono">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |form| %>
  <div class="form-floating my-3 col-sm-10 col-lg-4">
    <%= form.text_field :login, autocomplete: 'email', class: 'form-control', placeholder: 'Login' %>
    <%= form.label :login, 'Username or email' %>
  </div>

  <div class="form-floating my-3 col-sm-10 col-lg-4">
    <%= form.password_field :password, autocomplete: 'current-password', class: 'form-control', placeholder: 'Password' %>
    <%= form.label :password, 'Password' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="mb-3 form-check">
      <%= form.check_box :remember_me, class: 'form-check-input' %>
      <%= form.label :remember_me, class: 'form-check-label' %>
    </div>
  <% end %>

  <div class="row g-3 align-items-center">
    <div class="col-auto">
      <%= form.button :submit, class: 'btn btn-primary' do %>
        <i class="bi-arrow-right"></i> Submit
      <% end %>
    </div>

    <div class="col-auto">
      <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>
