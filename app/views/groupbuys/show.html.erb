<div class="text-center">
  <h1 class="mono bold"><%= @groupbuy.name %></h1>
  <h4 class="text-muted mb-3"><%= @groupbuy.end_distance %></h4>

  <%= image_tag @groupbuy.image, class: 'img-fluid rounded-3 mb-3' %>
</div>

<div class="row justify-content-center">
  <div class="col-lg-3 mx-3 p-3 bg-dark rounded">
    <h2 class="text-center mono">Meta</h2>
    <div class="d-flex justify-content-between align-items-center">
      <h4>Start</h4>
      <%= @groupbuy.start %>
    </div>
    <div class="d-flex justify-content-between align-items-center">
      <h4>End</h4>
      <%= @groupbuy.end %>
    </div>
    <div class="d-flex justify-content-between align-items-center">
      <h4>GB Type</h4>
      <%= @groupbuy.category.titleize %>
    </div>
  </div>
  <% if @groupbuy.proxy_links.any? %>
    <div class="col-lg-3 mx-3 p-3 bg-dark rounded">
      <h2 class="text-center mono">Vendors</h2>
      <% @groupbuy.proxy_links.each do |proxy| %>
        <div class="d-flex justify-content-between align-items-center">
          <h4><%= proxy.region %></h4>
          <%= link_to proxy.name, proxy.link, target: '_blank', class: 'badge bg-primary' %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>