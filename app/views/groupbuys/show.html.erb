<div class="text-center">
  <h1 class="mono display"><%= @groupbuy.name %></h1>
  <h4 class="text-muted mb-3"><%= @groupbuy.end_distance %></h4>
</div>

<div class="row justify-content-center">
  <div class="col-lg-8 mb-3">
    <%= image_tag @groupbuy.image, class: 'rounded img-fluid' %>
  </div>

  <div class="col-lg-3">
    <div class="p-3 bg-dark rounded">
      <h2 class="text-center mono">Meta</h2>
      <div class="d-flex justify-content-between align-items-center">
        <h4>Start</h4>
        <%= @groupbuy.start_date %>
      </div>
      <div class="d-flex justify-content-between align-items-center">
        <h4>End</h4>
        <%= @groupbuy.end_date %>
      </div>
      <div class="d-flex justify-content-between align-items-center">
        <h4>GB Type</h4>
        <%= @groupbuy.category.titleize %>
      </div>
    </div>
    
    <% if @groupbuy.links.any? %>
      <div class="mt-3 p-3 bg-dark rounded">
        <h2 class="text-center mono">Vendors</h2>
        <% @groupbuy.links.each do |link| %>
          <div class="d-flex justify-content-between align-items-center">
            <h4><%= link.descriptor %></h4>
            <%= link_to link.name, link.link, target: '_blank', class: 'nav-link p-0' %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>