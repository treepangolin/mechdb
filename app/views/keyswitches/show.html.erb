<div class="text-center">
  <h1 class="mono bold"><%= @keyswitch.name %></h1>
</div>

<div class="row p-3 justify-content-center">
  <%= image_tag @keyswitch.image, class: 'col-lg-7 p-0 rounded h-100' %>

  <div class="col-lg-4">
    <div class="p-3 bg-dark rounded text-center">
      <h2 class="mono">Description</h2>
      <p><%= @keyswitch.description %></p>
    </div>

    <div class="p-3 mt-3 bg-dark rounded">
      <h2 class="text-center mono">Data</h2>
      <div class="d-flex justify-content-between align-items-center">
        <h4>Type</h4>
        <span class="<%= @keyswitch.travel_type %>"><%= @keyswitch.travel_type.titleize %></span>
      </div>
      <div class="d-flex justify-content-between align-items-center">
        <h4>Weight</h4>
        <%= @keyswitch.weight %>
      </div>
      <div class="d-flex justify-content-between align-items-center">
        <h4>Travel</h4>
        <%= @keyswitch.travel %>
      </div>
      <div class="d-flex justify-content-between align-items-center">
        <h4>Manufacturer</h4>
        <%= @keyswitch.manufacturer %>
      </div>
    </div>
    
    <% if @keyswitch.links.any? %>
      <div class="mt-3 p-3 bg-dark rounded">
        <h2 class="text-center mono">Links</h2>
        <% @keyswitch.links.each do |link| %>
          <div class="d-flex justify-content-between align-items-center">
            <h4><%= link.descriptor %></h4>
            <%= link_to link.name, link.link, target: '_blank', class: 'badge bg-primary' %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>